@model string

<div id="deleteModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Delete Confirmation</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <a data-dismiss="modal" class="btn btn-clear">Cancel</a>
                <form asp-area="JobSeekers" asp-controller="UserManagement" asp-action="DeleteUser" method="post" role="form" asp-antiforgery="true">
                    <input type="hidden" name="userId" id="DeleteUserId" value="@Model" />
                    <button type="submit" class="btn btn-primary">Yes, delete this user</button>
                </form>
            </div>
        </div>

    </div>
</div>
