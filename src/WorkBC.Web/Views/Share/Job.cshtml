@using System.Globalization
@using WorkBC.ElasticSearch.Models.JobAttributes
@model WorkBC.Web.Models.Search.SearchResultsModel
@{
    Layout = null;
    Source job = Model.Result[0];
    TextInfo textInfo = new CultureInfo("en-US", false).TextInfo;
}

<html>
<head>
    @if (ViewBag.IsVirtualJob)
    {
        <title>WorkBC.ca Job Posting | @textInfo.ToTitleCase(job.Title) at @job.EmployerName (Remote)</title>
    }
    else
    {
        <title>WorkBC.ca Job Posting | @textInfo.ToTitleCase(job.Title) at @job.EmployerName in @job.City, B.C.</title>
    }
    <meta property="og:url" content="https://api-jobboard.workbc.ca/Share/Job?jobid=@job.JobId"/>
    <meta property="og:image" content="/Images/share.jpg"/>
    <meta property="og:type" content="website"/>
    @if (ViewBag.IsVirtualJob)
    {
        <meta property="og:title" content="WorkBC.ca Job Posting | @textInfo.ToTitleCase(job.Title) at @job.EmployerName (Remote)"/>
    }
    else
    {
        <meta property="og:title" content="WorkBC.ca Job Posting | @textInfo.ToTitleCase(job.Title) at @job.EmployerName in @job.City, B.C."/>
    }
    <meta property="og:description" content="Search B.C. jobs with the WorkBC job board."/>
    <meta http-equiv="refresh" content="0;URL='https://www.workbc.ca/Jobs-Careers/Find-Jobs/Jobs.aspx#/job-details/@job.JobId'"/>
</head>

<body>
</body>
</html>